---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			@reference "tailwindcss";
			/* Custom cosmic theme styles for prose content */
			.prose-content :global(h1) {
				@apply text-3xl font-bold text-[#9082CE] mt-12 mb-6 pb-2 border-b-2 border-[rgba(144,130,206,0.3)];
				text-shadow: 0 0 20px rgba(144, 130, 206, 0.5);
			}
			
			.prose-content :global(h2) {
				@apply text-2xl font-semibold text-[#9082CE] mt-10 mb-5 pb-2 border-b border-[rgba(144,130,206,0.2)];
			}
			
			.prose-content :global(h3) {
				@apply text-xl font-semibold text-pink-400 mt-8 mb-4;
			}
			
			.prose-content :global(h4) {
				@apply text-lg font-semibold text-blue-400 mt-6 mb-3;
			}
			
			.prose-content :global(h5) {
				@apply text-base font-semibold text-green-400 mt-6 mb-3;
			}
			
			.prose-content :global(h6) {
				@apply text-sm font-semibold text-purple-400 mt-5 mb-2;
			}
			
			.prose-content :global(p) {
				@apply mb-5 leading-relaxed text-gray-300 text-base;
			}
			
			.prose-content :global(code) {
				@apply px-2 py-1 rounded-md font-mono text-sm border;
				background: rgba(139, 92, 246, 0.15);
				color: #c084fc;
				border-color: rgba(139, 92, 246, 0.3);
			}
			
			.prose-content :global(pre) {
				@apply rounded-xl p-6 overflow-x-auto my-8 relative border;
				background: rgba(15, 23, 42, 0.9);
				border-color: rgba(144, 130, 206, 0.4);
			}
			
			.prose-content :global(pre code) {
				@apply p-0 border-none text-sm leading-relaxed;
				background: none;
				color: rgb(196, 132, 252);
			}
			
			.prose-content :global(blockquote) {
				@apply border-l-4 pl-6 py-4 my-8 italic rounded-r-xl;
				border-color: #9082CE;
				background: rgba(144, 130, 206, 0.08);
			}
			
			.prose-content :global(a) {
				@apply text-pink-400 no-underline border-b transition-all duration-200;
				border-bottom-color: rgba(236, 72, 153, 0.3);
			}
			
			.prose-content :global(a:hover) {
				@apply text-purple-400;
				border-bottom-color: #c084fc;
			}
			
			.prose-content :global(ul), .prose-content :global(ol) {
				@apply my-6 pl-8;
			}
			
			.prose-content :global(li) {
				@apply mb-3 text-gray-300 leading-relaxed;
			}
			
			.prose-content :global(strong) {
				@apply text-pink-400 font-semibold;
			}
			
			.prose-content :global(em) {
				@apply text-purple-400 italic;
			}
			
			.prose-content :global(hr) {
				@apply border-none h-px my-12;
				background: linear-gradient(90deg, transparent, rgba(144, 130, 206, 0.5), transparent);
			}
		</style>
	</head>

	<body class="font-sans m-0 p-0 text-left min-h-screen text-gray-200 text-base leading-relaxed overflow-x-hidden relative"
		  style="background: radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(236, 72, 153, 0.08) 0%, transparent 50%), radial-gradient(circle at 40% 80%, rgba(59, 130, 246, 0.06) 0%, transparent 50%), linear-gradient(135deg, rgb(10, 8, 20) 0%, rgb(20, 15, 35) 100%);">
		
		<!-- leonal floating particles background -->
		<div class="fixed top-0 left-0 w-full h-full pointer-events-none z-[1] animate-cosmic-drift"
			 style="background: repeating-linear-gradient(45deg, transparent, transparent 80px, rgba(196, 132, 252, 0.02) 80px, rgba(196, 132, 252, 0.02) 82px), repeating-linear-gradient(-45deg, transparent, transparent 80px, rgba(236, 72, 153, 0.02) 80px, rgba(236, 72, 153, 0.02) 82px);"></div>
		
		<Header />
		<main class="w-full max-w-6xl mx-auto px-4 py-8 relative z-[2] min-h-[calc(100vh-120px)]">
			<article>
				<div class="w-full mb-8">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" class="block mx-auto rounded-xl shadow-[0_8px_32px_rgba(139,92,246,0.15)] border border-[rgba(144,130,206,0.2)]" />}
				</div>
				<div class="prose max-w-4xl mx-auto p-8 text-gray-200 bg-slate-900/60 backdrop-blur-xl rounded-2xl border border-[rgba(144,130,206,0.2)] shadow-[0_8px_32px_rgba(139,92,246,0.1)]">
					<div class="mb-12 pb-8 text-center leading-tight border-b border-[rgba(144,130,206,0.2)]">
						<div class="mb-6 flex flex-col items-center gap-2">
							<div class="flex items-center gap-4 text-gray-400 text-sm font-mono">
								<FormattedDate date={pubDate} />
								<span class="text-gray-500 text-xs">â€¢ 3 min read</span>
							</div>
							{
								updatedDate && (
									<div class="italic text-pink-400/80 text-xs mt-2">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="mt-4 text-4xl font-bold text-[#9082CE] leading-tight max-w-3xl mx-auto">{title}</h1>
					</div>
					<div class="prose-content">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
