---
const today = new Date();
---

<footer class="p-12 mt-16 text-center relative font-mono bg-slate-900/90 border-t-2 border-purple-500"
		style="background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, transparent 50%), rgba(15, 23, 42, 0.9);">
	<!-- Top glow line -->
	<div class="absolute top-0 left-0 right-0 h-px bg-purple-500" style="box-shadow: 0 0 10px #8b5cf6;"></div>
	
	<div class="max-w-6xl mx-auto flex flex-col gap-6">
		<div class="text-sm text-purple-300" style="text-shadow: 0 0 3px rgba(139, 92, 246, 0.3);">
			&copy; {today.getFullYear()} UmmIt
		</div>

	</div>
</footer>

<!-- Responsive styles for mobile -->
<style>
	@media (max-width: 720px) {
		footer {
			padding: 2rem 1rem;
		}
		
		.footer-content {
			gap: 1rem;
		}
		
		.social-links {
			gap: 1rem;
		}
		
		.footer-terminal {
			font-size: 0.7rem;
		}
	}
</style>
